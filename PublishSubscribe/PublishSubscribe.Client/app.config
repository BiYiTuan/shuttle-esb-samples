<?xml version="1.0"?>
<configuration>
	<configSections>
		<section name="serviceBus" type="Shuttle.ESB.Core.ServiceBusSection, Shuttle.ESB.Core"/>
		<section name='sqlServer' type="Shuttle.ESB.SqlServer.SqlServerSection, Shuttle.ESB.SqlServer"/>
	</configSections>

	<appSettings>
		<add key="SubscriptionManagerSecured" value="false" />
	</appSettings>

	<connectionStrings>
		<clear/>
		<add
		  name="SubscriptionConnection"
		  connectionString="Data Source=.; Initial Catalog=shuttle;Integrated Security=SSPI;"
		  providerName="System.Data.SqlClient"/>
	</connectionStrings>

	<sqlServer
		subscriptionManagerConnectionStringName="SubscriptionConnection" />	

	<serviceBus>
		<inbox
		  workQueueUri="msmq://./pubsub-client-inbox-work"
		  deferredQueueUri="msmq://./pubsub-client-inbox-deferred"
		  errorQueueUri="msmq://./shuttle-samples-error" />
	</serviceBus>
</configuration>
